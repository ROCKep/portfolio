{% extends 'base.html.twig' %}
{% block title %}Редактирование информации{% endblock %}
{% block header %}Редактирование информации{% endblock %}
{% block body %}
    <ul class="nav nav-tabs">
        {% set uri = app.request.getRequestUri() %}
        <li {{ uri ==  path('student_edit', {'id': student.id}) ? 'class="active"' }}>
            <a href="{{ path('student_edit', {'id': student.id}) }}">Основное</a>
        </li>
        <li {{ uri ==  path('student_edit_security', {'id': student.id}) ? 'class="active"' }}>
            <a href="{{ path('student_edit_security', {'id': student.id}) }}">Безопасность</a>
        </li>
        <li {{ uri ==  path('student_edit_avatar', {'id': student.id}) ? 'class="active"' }}>
            <a href="{{ path('student_edit_avatar', {'id': student.id}) }}">Фотография</a>
        </li>
    </ul>
    <br>
        {% block edit_body %}{% endblock %}
    <p><a href="{{ path('student_show', {'id': student.id}) }}">Вернуться на страницу пользователя</a></p>
{% endblock %}