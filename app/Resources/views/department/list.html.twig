{% extends 'base.html.twig' %}

{% block title %}Кафедры {{ faculty.abbr }}{% endblock %}
{% block header %}Кафедры {{ faculty.abbr }}{% endblock %}

{% block body %}
    <p><a href="{{ path('faculties_list') }}">Вернуться к списку факультетов</a></p>
    <p><a href="{{ path('department_new', {'id': faculty.id}) }}">Добавить кафедру</a></p>
    {% if faculty.departments|length > 0 %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Название</th>
            <th>Аббревиатура</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for department in faculty.departments %}
        <tr>
            <td><a href="{{ path('groups_list', {'id': department.id}) }}">{{ department.name }}</a></td>
            <td>{{ faculty.abbr ~ department.number}}</td>
            <td>
                <ul>
                    <li><a href="{{ path('department_edit', {'id': department.id}) }}">Изменить</a></li>
                    <li><a href="{{ path('department_delete', {'id': department.id}) }}">Удалить</a></li>
                </ul>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>Пусто</p>
    {% endif %}
{% endblock %}