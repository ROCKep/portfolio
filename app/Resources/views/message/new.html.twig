{% extends 'base.html.twig' %}

{% block title %}Новое сообщение{% endblock %}

{% block header %}Новое сообщение{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label class="col-sm-2 control-label">Получатель</label>
        <div class="col-sm-10">
            <p class="form-control-static">
                <a href={{ path('student_show', {'id': receiver.id}) }}>
                    {{ receiver.lastName }} {{ receiver.firstName }}
                </a>
            </p>
        </div>
    </div>
    {{ form_row(form.content) }}
    {{ form_row(form.submit) }}
    {{ form_end(form) }}
{% endblock %}